<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.Profile">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/gradient_back"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/stoke_light"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="13dp" />


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/email_plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_sans_medium"
        android:padding="4dp"
        android:text="youremailid@gmail.com"
        android:textColor="#A39A9A"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_plain" />

    <TextView
        android:id="@+id/name_plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/fira_sans_medium"
        android:padding="10dp"
        android:text="Your Name"
        android:textColor="#292828"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/email_plain"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/email_plain"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <Button
        android:id="@+id/edit_profile_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:backgroundTint="#00c6ff"
        android:fontFamily="@font/fira_sans_medium"
        android:text="Edit Profile"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/email_plain"
        app:layout_constraintStart_toStartOf="@+id/email_plain"
        app:layout_constraintTop_toBottomOf="@+id/email_plain" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00c6ff"
        android:fontFamily="@font/fira_sans_medium"
        android:text="LogOut"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_profile_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_profile_btn"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>